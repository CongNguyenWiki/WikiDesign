<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/root_layout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/rectangle_top_round_white">

  <FrameLayout
    android:id="@+id/layout_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_padding"
    >

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight="@dimen/triple_padding"
      android:gravity="center_horizontal"
      android:text="@string/txt_edit_credit_card"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      android:textColor="@color/textColorPrimary"
      fontPath="@string/fonts_Adobe_Garamond_Pro_Regular"
      tools:ignore="MissingPrefix" />

    <ImageView
      android:id="@+id/img_close"
      android:layout_width="30dp"
      android:layout_height="25dp"
      android:layout_gravity="right|center_vertical"
      android:paddingBottom="7dp"
      android:paddingLeft="7dp"
      android:paddingTop="7dp"
      android:src="@drawable/ic_close_accent"
      />

  </FrameLayout>

  <View
    android:id="@+id/divider"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_below="@+id/layout_title"
    android:layout_marginBottom="@dimen/normal_padding"
    android:background="@color/lightGrey"
    />


  <androidx.core.widget.NestedScrollView
    android:id="@+id/nsv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/tv_save"
    android:layout_below="@id/divider"
    tools:ignore="MissingPrefix">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_normal">
        <TextView
          android:id="@+id/sign_of_mandatory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/normal_padding"
          android:layout_marginBottom="@dimen/normal_padding"          android:text="*"
          android:textColor="@color/colorAccent"
          />
        <TextView
          android:id="@+id/tvMandatory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/extra_small_padding"
          android:layout_marginRight="@dimen/normal_padding"
          android:text="@string/mandatory"
          android:textColor="@color/textColorPrimary"
          fontPath="@string/fonts_Lato_Regular"
          style="@style/TextAppearance.AppCompat.Caption"
          tools:ignore="MissingPrefix" />
      </LinearLayout>


      <LinearLayout
        android:id="@+id/layout_card_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_of_mandatory"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1">

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_card_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/card_company"
            android:inputType="none"
            tools:text="test1234" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:src="@drawable/ic_dropdown_accent" />

          <View
              android:id="@+id/v_card_company"
              android:layout_width="match_parent"
              android:layout_height="56dp" />

        </RelativeLayout>

      </LinearLayout>


      <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_card_company"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_owner_name"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"
          android:hint="@string/full_name"
          android:imeOptions="actionNext"
          android:inputType="text"
          tools:text="test1234" />
      </LinearLayout>

      <RelativeLayout
        android:id="@+id/layout_credit_card_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_name"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding"
        android:paddingBottom="@dimen/normal_padding">

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_card_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/credit_card_number"
          android:imeOptions="actionNext"
          android:inputType="number"
          android:maxLength="16"
          tools:text="test1234" />

        <ImageView
          android:id="@+id/img_card_brand"
          android:layout_width="24dp"
          android:layout_height="20dp"
          android:layout_alignParentEnd="true"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="@dimen/small_padding"
          android:layout_marginTop="@dimen/small_padding"
          android:layout_marginRight="@dimen/normal_padding"
          android:paddingBottom="@dimen/small_padding"
          android:scaleType="fitCenter"
          android:visibility="invisible"
          tools:src="@drawable/ic_american_express_blue_background" />

      </RelativeLayout>

      <LinearLayout
        android:id="@+id/layout_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_credit_card_number"
        android:layout_marginBottom="@dimen/small_padding"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1">

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_exp_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/expiry_month"
            android:inputType="none"
            tools:text="test1234" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:src="@drawable/ic_dropdown_accent" />

          <View
            android:id="@+id/v_exp_month"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        </RelativeLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/extra_small_padding"
          android:layout_weight="1">

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_exp_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/expiry_year"
            android:inputType="none"
            tools:text="test1234" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:src="@drawable/ic_dropdown_accent" />

          <View
            android:id="@+id/v_exp_year"
            android:layout_width="match_parent"
            android:layout_height="56dp" />
        </RelativeLayout>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_expiry"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/normal_padding"
        android:paddingRight="@dimen/normal_padding">

        <RelativeLayout
          android:id="@+id/layout_security_code"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1">

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_cvc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/security_code"
            android:inputType="numberPassword"
            android:maxLength="4"

            tools:text="test1234" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/normal_padding"
            android:paddingBottom="11dp"
            android:src="@drawable/ic_question"
            android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_security"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1">

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/country_of_residence"
            android:inputType="none"
            tools:text="test1234" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:src="@drawable/ic_dropdown_accent" />

          <View
            android:id="@+id/v_country"
            android:layout_width="match_parent"
            android:layout_height="56dp" />

        </RelativeLayout>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_zipCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_country"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_zip_code"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"
          android:hint="@string/zip_code"
          android:imeOptions="actionNext"
          android:inputType="text"
          tools:text="test1234" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_prefectures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_zipCode"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding"
          android:visibility="gone"
          >

        <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"

            >

          <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
            android:id="@+id/input_prefectures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/prefectures"
            android:inputType="none"
            tools:text="test1234"
              />

          <ImageView
            android:id="@+id/img_prefectures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:src="@drawable/ic_dropdown_accent"
              />

          <View
              android:id="@+id/v_prefectures"
              android:layout_width="match_parent"
              android:layout_height="56dp" />

        </RelativeLayout>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_municipalities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_prefectures"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding"
          android:visibility="gone"
          >

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_municipalities"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"
          android:hint="@string/municipalities"
          android:imeOptions="actionNext"
          android:inputType="text"
          tools:text="test1234"

            />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_street_address1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_municipalities"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding"
          >

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_street_address1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"
          android:hint="@string/street_address"
          android:imeOptions="actionNext"
          android:inputType="text"
          tools:text="test1234" />
      </LinearLayout>

      <LinearLayout
        android:id="@+id/layout_street_address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_street_address1"
        android:orientation="horizontal"
        android:padding="@dimen/normal_padding">

        <com.skypremiuminternational.app.app.view.SkyTextInputSignLayout
          android:id="@+id/input_street_address2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginRight="@dimen/extra_small_padding"
          android:layout_weight="1"
          android:hint="@string/build_street"
          android:imeOptions="actionNext"
          android:inputType="text"
          tools:text="test1234" />
      </LinearLayout>


      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_street_address2"
        android:layout_marginLeft="@dimen/normal_padding"
        android:layout_marginRight="@dimen/normal_padding"
        android:layout_marginBottom="@dimen/normal_padding">

        <ImageView
          android:id="@+id/img_checkbox"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/extra_small_padding"
          android:layout_marginRight="@dimen/normal_padding"
          android:src="@drawable/ic_circle"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <TextView
          android:id="@+id/txt_set_primary_credit"
          style="@style/TextAppearance.AppCompat.Small"
          fontPath="@string/fonts_Lato_Regular"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/normal_padding"
          android:layout_toRightOf="@+id/img_checkbox"
          android:text="@string/txt_set_primary_credit"
          android:textColor="@color/textColorPrimary"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toEndOf="@id/img_checkbox"
          app:layout_constraintTop_toTopOf="parent" />

        <ImageView
          android:id="@+id/img_delete"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_alignParentEnd="true"
          android:layout_centerVertical="true"
          android:foreground="?attr/selectableItemBackground"
          android:padding="@dimen/small_padding"
          android:src="@drawable/ic_garbage"
          android:visibility="visible"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
          android:id="@+id/layout_disable_checked"
          android:layout_width="0dp"
          android:layout_height="25dp"
          android:background="@color/whiteTransparent"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@id/img_delete"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


  </androidx.core.widget.NestedScrollView>

  <TextView
    android:id="@+id/tv_save"
    android:layout_width="match_parent"
    android:letterSpacing="0.2"
    android:text="@string/save"
    style="@style/ButtonStyle"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    />

</RelativeLayout>