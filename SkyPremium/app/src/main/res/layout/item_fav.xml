<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/ll_travel_product"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:foreground="?selectableItemBackground"
  android:orientation="vertical"
  android:layout_marginBottom="20dp"
  android:elevation="2dp"
  >


  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="200dp">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
          android:id="@+id/viewPager"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:visibility="visible"
          />

        <ImageView
          android:id="@+id/imgNext"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_right"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="5dp"
          android:tint="#F4F4F4"
          android:visibility="gone"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"
          />


        <ImageView
          android:id="@+id/imgPrevious"
          android:layout_width="35dp"
          android:layout_height="35dp"
          android:src="@drawable/ic_left"
          android:tint="#F4F4F4"
          android:layout_centerVertical="true"
          android:layout_marginLeft="5dp"
          android:visibility="gone"
          android:layout_alignParentLeft="true"
          android:paddingTop="5dp"
          android:paddingBottom="5dp"/>




      </RelativeLayout>




      <LinearLayout
        android:id="@+id/layoutSliderIndicators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-14dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="visible"
        />

    </LinearLayout>




    <RelativeLayout
      android:id="@+id/rl"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:paddingBottom="28dp"
      android:paddingTop="4dp"
      >
      <FrameLayout
        android:id="@+id/flicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        >

        <ImageView
          android:id="@+id/iv_new"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_gravity="start|center_vertical"
          android:src="@drawable/ic_new_product"
          />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end">
          <ImageView
            android:id="@+id/iv_tier"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginRight="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/platinum"
            android:visibility="invisible"
            />
          <ImageView
            android:id="@+id/ivFav_travel_product"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginRight="4dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_favourite_border_accent"
            android:visibility="visible"
            />
        </LinearLayout>
      </FrameLayout>
      <LinearLayout
        android:layout_below="@+id/flicon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
          android:id="@+id/tvTitle_travel_product"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginBottom="4dp"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="2"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:text="@string/sample_product_title"
          fontPath="@string/fonts_Lato_Regular"
          android:textColor="#343741"
          android:textSize="20sp"
          tools:ignore="MissingPrefix" />

        <TextView
          android:id="@+id/tvSubTitle_travel_product"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center"
          android:maxLines="2"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:textAllCaps="true"
          fontPath="@string/fonts_Lato_Regular"
          android:textColor="#343741"
          android:textSize="11sp"
          tools:ignore="MissingPrefix"
          tools:text="@string/sample_product_subtitle"
          />

        <com.google.android.material.chip.ChipGroup
          android:id="@+id/groupUnique"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_marginTop="12dp"
          />


        <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="#EAEAEA"
          android:layout_marginTop="20dp"/>

        <LinearLayout
          android:id="@+id/llWhatUnique"
          android:layout_marginTop="12dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:orientation="horizontal"
          android:weightSum="10"
          android:visibility="gone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
            android:text="What's\nUnique"
            android:textColor="#343741"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:layout_weight="2"
            android:paddingBottom="4dp"
            fontPath="@string/fonts_Lato_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />






          <com.skypremiuminternational.app.app.view.EllipSizeTextView
            android:id="@+id/tvWhatUnique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#343741"
            android:gravity="start"
            android:layout_weight="8"
            android:maxLines="2"
            android:paddingTop="4dp"
            android:ellipsize="end"
            fontPath="@string/fonts_Lato_Regular"
            tools:text="Enjoy Australia’s most popular hot "
            tools:ignore="MissingPrefix" />












        </LinearLayout>

        <LinearLayout
          android:layout_marginTop="12dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_weight="10"
          android:layout_height="wrap_content">

          <TextView
            android:id="@+id/tvTitleBenefit"
            android:text="@string/benefits_and_privileges"
            android:textColor="#343741"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:layout_weight="2"
            fontPath="@string/fonts_Lato_Medium"
            android:layout_width="0dp"
            android:paddingBottom="4dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />

          <com.skypremiuminternational.app.app.view.EllipSizeTextView
            android:id="@+id/tvBenefits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:textSize="14sp"
            android:textColor="#343741"
            android:maxLines="3"
            android:paddingTop="4dp"
            android:ellipsize="end"
            fontPath="@string/fonts_Lato_Regular"
            tools:text="5-star accommodation at Pep kkkkkkkkkkkkkkkkkkkkkk Soul Surfers Paradise’s 3-Bedroom Penthouse…more"
            tools:ignore="MissingPrefix" />


        </LinearLayout>




        <LinearLayout
          android:id="@+id/llReview"
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="20dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:visibility="gone">

          <com.willy.ratingbar.ScaleRatingBar
            android:id="@+id/rtStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:visibility="gone"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            app:srb_numStars="5"
            app:srb_minimumStars="0.5"
            app:srb_rating="0.5"
            app:srb_starWidth="22dp"
            app:srb_starHeight="22dp"
            app:srb_starPadding="1dp"
            app:srb_stepSize="0.5"
            app:srb_isIndicator="false"
            app:srb_clickable="false"
            app:srb_scrollable="false"
            app:srb_clearRatingEnabled="true"
            app:srb_drawableEmpty="@drawable/ic_star_light_empty"
            app:srb_drawableFilled="@drawable/ic_star_full"
            />

          <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:maxLines="1"
            android:visibility="gone"
            android:textAllCaps="false"
            android:layout_marginRight="4dp"
            tools:ignore="MissingPrefix"
            tools:text="No review rating yet"
            />

          <TextView
            android:id="@+id/tvCountReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_gravity="center"
            android:maxLines="1"
            android:layout_marginRight="4dp"
            android:textAllCaps="false"
            fontPath="@string/fonts_Lato_Regular"
            android:textColor="#858585"
            android:textSize="12sp"
            tools:ignore="MissingPrefix"
            android:visibility="gone"
            tools:text="| 1,478 reviews"
            />

          <TextView
            android:id="@+id/tvDollars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_gravity="center"
            android:layout_marginRight="4dp"
            android:maxLines="1"
            android:textAllCaps="false"
            fontPath="@string/fonts_Lato_Regular"
            android:textColor="#858585"
            android:textSize="12sp"
            android:visibility="gone"
            tools:ignore="MissingPrefix"
            tools:text="| $$$$$"
            />


        </LinearLayout>





        <TextView
          android:id="@+id/tvPrice"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="start"
          android:visibility="gone"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:textColor="#343741"
          android:includeFontPadding="false"
          tools:ignore="MissingPrefix"
          tools:text="From S$14,999"
          />


      </LinearLayout>
    </RelativeLayout>
    <LinearLayout
      android:id="@+id/llButton"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
      <TextView
        android:id="@+id/tv_view_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="View Detail"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:background="#CBA84A"
        android:visibility="gone"
        android:layout_weight="1"
        fontPath="@string/fonts_Lato_Regular"
        tools:ignore="MissingPrefix" />
      <TextView
        android:id="@+id/tv_reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:text="Reserve Now"
        android:paddingTop="17dp"
        android:paddingBottom="17dp"
        android:background="#AF903E"
        android:visibility="gone"
        fontPath="@string/fonts_Lato_Regular"
        android:layout_weight="1"
        tools:ignore="MissingPrefix" />
    </LinearLayout>

  </LinearLayout>







</androidx.cardview.widget.CardView>