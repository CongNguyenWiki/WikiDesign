<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:weightSum="10"
    android:background="@color/white"
    android:elevation="4dp"
    android:orientation="horizontal">

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      >

      <ImageView
        android:id="@+id/imgCardBrand"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        tools:src="@drawable/ic_visa_blue_background"/>



      <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="xxxx xxxx xxxx 3344"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgCardBrand"
        android:textSize="14sp"
        android:textColor="@color/black"
        />

      <TextView
        android:id="@+id/tvCardDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="4/2022"
        android:layout_marginLeft="11dp"
        android:layout_below="@+id/tvCardNumber"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        />


      <ImageView
        android:id="@+id/imgDefautCard"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        android:src="@drawable/ic_checked"/>

    </RelativeLayout>

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="5"
      >

      <TextView
        android:id="@+id/txtEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:text="Edit"
        android:letterSpacing="0.06"
        android:textAllCaps="true"
        android:textColor="@color/textGreyChateau"
        android:textSize="10sp"
        fontPath="@string/fonts_Lato_Regular"
        tools:ignore="MissingPrefix"/>



      <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/txtEdit"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:textSize="14sp"
        android:textColor="@color/black"
        tools:text="Son"
        />

      <TextView
        android:id="@+id/tvPostalCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvName"
        android:layout_gravity="left"
        android:textSize="14sp"
        android:textColor="@color/black"
        tools:text="70000"
        />
      <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/tvPostalCode"
        android:layout_gravity="left"
        android:textSize="14sp"
        android:textColor="@color/black"
        tools:text="666 street"
        />
      <TextView
        android:id="@+id/tvCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:textSize="14sp"
        android:layout_below="@+id/tvAddress"
        android:textColor="@color/black"
        tools:text="Singapore"
        />

      <TextView
          android:id="@+id/tvState"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tvCountryName"
          android:layout_gravity="left"
          android:layout_marginLeft="20dp"
          android:layout_marginTop="5dp"
          android:layout_marginRight="11dp"
          android:layout_marginBottom="5dp"
          android:textColor="@color/black"
          android:textSize="14sp"
          tools:text="70000" />

    </RelativeLayout>

  </LinearLayout>



</LinearLayout>