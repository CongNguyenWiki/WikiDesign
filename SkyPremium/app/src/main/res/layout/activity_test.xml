<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

        <RelativeLayout
            android:id="@+id/homeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/circle_orchid"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="24dp"
                android:layout_height="19dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close_accent" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvName"
            style="@style/TextAppearance.AppCompat.Headline"
            fontPath="@string/fonts_Notera_PersonalUseOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeBanner"
            android:layout_marginTop="@dimen/margin_normal"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            tools:ignore="MissingPrefix"
            tools:text="Mr Laurent Anderson" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_below="@+id/tvName"
            android:id="@+id/linearPoint"
            >

            <TextView
                style="@style/TextAppearance.AppCompat.Caption"
                fontPath="@string/fonts_Lato_Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/square_orchid"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:paddingBottom="4dp"
                android:text="Premium"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tvPoints"
                style="@style/TextAppearance.AppCompat.Caption"
                fontPath="@string/fonts_Lato_Bold"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10sp"
                tools:ignore="MissingPrefix"
                tools:text="30,230" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:gravity="center"
                android:text="Sky dollar"
                android:textAllCaps="true"
                android:textColor="@color/orchid"
                android:textSize="8sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profileAndFavorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearPoint"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tvProfile"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:padding="10dp"
                android:text="My Profile"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvFavourites"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:padding="10dp"
                android:text="Favourites"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10sp"
                android:visibility="visible" />


        </LinearLayout>

        <View
            android:id="@+id/firstView"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            android:background="@color/dividerColor"
            android:layout_below="@+id/profileAndFavorite"
            />

    <TextView
        android:id="@+id/tvHome"
        style="@style/TextAppearance.AppCompat.Subhead"
        fontPath="@string/fonts_Adobe_Garamond_Pro_Regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstView"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/home"
        android:textColor="@color/textColorPrimary"
        android:visibility="gone"
        tools:ignore="MissingPrefix" />


    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvHome"
        android:visibility="visible" />


        <LinearLayout
            android:id="@+id/linearContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/expandableListView"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/tvAbout"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:letterSpacing="0.1"
                    android:padding="10dp"
                    android:text="About"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tvHowItWorks"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:text="How it works"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />


                <TextView
                    android:id="@+id/tvMemberBenefits"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:letterSpacing="0.1"
                    android:padding="10dp"
                    android:text="Member\n benefits"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/tvMembership"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:letterSpacing="0.1"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:text="@string/buzz"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tvLegal"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAlignment="center"
                    android:letterSpacing="0.1"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Legal"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />

                <TextView
                    android:id="@+id/tvFaq"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="faq"
                    android:textAllCaps="true"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="10sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearContact"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <TextView
                android:id="@+id/tvLogOut"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:letterSpacing="0.1"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:paddingLeft="32dp"
                android:paddingTop="16dp"
                android:paddingRight="32dp"
                android:paddingBottom="16dp"
                android:text="@string/log_out"
                android:textAllCaps="true"
                android:textColor="@color/textColorPrimary"
                android:textSize="10sp" />

            <!--<com.andrognito.kerningview.KerningTextView
                android:id="@+id/tvSignIn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="Sign In"
                fontPath="@string/fonts_Lato_Bold"
                tools:ignore="MissingPrefix"
                style="@style/ButtonStyle"
                />-->

            <LinearLayout
                android:id="@+id/ll_social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/imgFacebook"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_facebook_accent" />

                <ImageView
                    android:id="@+id/imgInstagram"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="32dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_instagram_accent" />

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_twitter_accent"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvVersion"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="68dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="V1.0.0.12312312312311"
                android:textAllCaps="true"
                android:textSize="8dp" />

        </LinearLayout>


</RelativeLayout>